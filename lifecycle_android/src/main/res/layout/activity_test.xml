<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qingchen.vrmr.TestActivity"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="#B2000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.7">
            <!-- 标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/play_danmu_back"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="ObsoleteLayoutParam,RtlHardcoded"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/play_danmu_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:hint="在这里输入弹幕"
                        android:imeOptions="flagNoExtractUi"
                        android:maxLength="30"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp"
                        android:singleLine="true"
                        android:textColorHint="#7fffffff"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/input_danmu_text_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="30"
                        android:textColor="#7fffffff"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlyt_play_danmu_send"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/play_danmu_send"
                        android:layout_width="75dip"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="发送"
                        android:textSize="15sp"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/select_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <RadioGroup
                    android:id="@+id/play_color_sent_danmu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                    <RadioButton
                        android:id="@+id/play_color_sent_danmu_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:background="@null"
                        android:button="@null"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>

